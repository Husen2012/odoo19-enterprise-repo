# Odoo 19 Enterprise Environment Configuration
# Copy this file to .env and customize the values

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Instance Configuration
INSTANCE_NAME=odoo19-enterprise
COMPOSE_PROJECT_NAME=odoo19-enterprise

# Port Configuration
ODOO_PORT=10019
LONGPOLLING_PORT=20019
REDIS_PORT=6389
PGBOUNCER_PORT=6439
POSTGRES_PORT=5432

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Settings
POSTGRES_DB=postgres
POSTGRES_USER=odoo
POSTGRES_PASSWORD=odoo19@2025
POSTGRES_VERSION=17

# Database Performance Settings
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_MAINTENANCE_WORK_MEM=64MB

# =============================================================================
# ODOO CONFIGURATION
# =============================================================================

# Odoo Version and Image
ODOO_VERSION=19
ODOO_IMAGE=odoo:19

# Odoo Master Password
ODOO_MASTER_PASSWORD=Enterprise@2025

# Performance Settings
ODOO_WORKERS=6
ODOO_MAX_CRON_THREADS=4
ODOO_MEMORY_HARD=4294967296
ODOO_MEMORY_SOFT=3221225472
ODOO_LIMIT_REQUEST=8192
ODOO_LIMIT_TIME_CPU=900
ODOO_LIMIT_TIME_REAL=1800

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Settings
REDIS_VERSION=7-alpine
REDIS_PASSWORD=
REDIS_MAXMEMORY=1gb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# =============================================================================
# PGBOUNCER CONFIGURATION
# =============================================================================

# pgbouncer Settings
PGBOUNCER_POOL_MODE=session
PGBOUNCER_MAX_CLIENT_CONN=200
PGBOUNCER_DEFAULT_POOL_SIZE=50
PGBOUNCER_SERVER_RESET_QUERY=DISCARD ALL
PGBOUNCER_SERVER_CHECK_QUERY=SELECT 1
PGBOUNCER_SERVER_CHECK_DELAY=30

# =============================================================================
# RESOURCE LIMITS
# =============================================================================

# PostgreSQL Resources
POSTGRES_MEMORY_RESERVATION=4G
POSTGRES_MEMORY_LIMIT=8G

# Odoo Resources
ODOO_MEMORY_RESERVATION=3G
ODOO_MEMORY_LIMIT=6G

# Redis Resources
REDIS_MEMORY_RESERVATION=512M
REDIS_MEMORY_LIMIT=2G

# pgbouncer Resources
PGBOUNCER_MEMORY_RESERVATION=256M
PGBOUNCER_MEMORY_LIMIT=512M

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security Settings
ODOO_LIST_DB=False
ODOO_PROXY_MODE=True
ODOO_WITHOUT_DEMO=True

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Settings
ODOO_LOG_LEVEL=info
ODOO_LOG_HANDLER=:INFO
POSTGRES_LOG_STATEMENT=none
REDIS_LOG_LEVEL=warning

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_LOCATION=/opt/backups

# =============================================================================
# ENTERPRISE CONFIGURATION
# =============================================================================

# Enterprise License (optional - can be configured via web interface)
# ENTERPRISE_LICENSE_PATH=/path/to/license/file

# Enterprise Features
ENTERPRISE_MODULES=web_enterprise,web_studio,documents,helpdesk,planning

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Network Settings
NETWORK_SUBNET=172.20.0.0/16
NETWORK_DRIVER=bridge

# =============================================================================
# DEVELOPMENT SETTINGS (disable in production)
# =============================================================================

# Development Mode (set to false in production)
ODOO_DEV_MODE=False
ODOO_TEST_ENABLE=False

# Debug Settings
ODOO_DEBUG=False
POSTGRES_LOG_MIN_MESSAGES=warning

# =============================================================================
# SSL/TLS CONFIGURATION (for production)
# =============================================================================

# SSL Settings (configure when using SSL)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/private.key
# FORCE_SSL=True

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Email Configuration (configure as needed)
# SMTP_SERVER=localhost
# SMTP_PORT=25
# SMTP_SSL=False
# SMTP_USER=
# SMTP_PASSWORD=
# EMAIL_FROM=noreply@yourcompany.com

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Health Check Settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# TIMEZONE AND LOCALIZATION
# =============================================================================

# Timezone Settings
TZ=UTC
ODOO_TIMEZONE=UTC
ODOO_LANGUAGE=en_US

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Custom Addon Paths (additional to default paths)
# CUSTOM_ADDON_PATHS=/mnt/custom-addons

# Custom Configuration Files
# CUSTOM_CONFIG_PATH=/etc/odoo/custom.conf

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env before using
# 2. Customize values according to your environment
# 3. Never commit .env file to version control
# 4. Use strong passwords in production
# 5. Configure SSL/TLS for production deployments
# 6. Adjust resource limits based on your server capacity
# 7. Enable monitoring and logging in production
# 8. Set up regular backups
# 9. Keep Enterprise license information secure
# 10. Test configuration changes in staging first
