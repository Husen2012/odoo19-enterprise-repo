<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.Navbar" t-inherit="point_of_sale.Navbar" t-inherit-mode="extension">
        <xpath expr="//ProxyStatus" position="replace">
            <button class="d-flex flex-column align-items-center justify-content-center text-center w-100 gap-1 btn btn-light lh-sm" t-on-click="toggleIotConnection">
                <i t-att-class="'fa fa-fw fa-' + (pos.iotHttp.status === 'local' ? 'sitemap' : 'globe') + (pos.iotHttp.status === 'offline' ? ' text-danger' : ' text-success')"
                   role="img"
                   title="IoT Box Connected">
                </i>
                <t t-esc="state.iotStatus" t-if="connectionStatus() and state.iotStatus" />
            </button>
        </xpath>
    </t>
</templates>
